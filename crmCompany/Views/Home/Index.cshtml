        @Html.DropDownList("Companys",null,"Seçiniz",new{@class="form-control"})
    </div>
    <div class="column col-2">
         <input type="submit" value="Get Detail" /><br />
    </div>
</div>
<p>
  <input type="text" readonly="readonly" id="txtresults" />
    <br />
    <ul class="list-group">
       @* @Html.DropDownList("txtresults", (IEnumerable<SelectListItem>)ViewBag.Companys, null, new { @class ="form-control" })*@
        @foreach (var item in Model)
        {
           
                 <li class="list-group-item">
                    @item.Id.ToString();
                
                </li>
          

        }
