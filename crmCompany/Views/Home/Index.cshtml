
@model IEnumerable<crmCompany.Models.Companys>
@{
    ViewData["Title"] = "Home Page";

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script>
    $(function(){
    $("#Companys").change(function() {
    var displaycourse=$("#Companys option:selected").text();
    $("#txtresults").val(displaycourse);
    })
    })
</script>
HttpContext.Session.SetString("PrimaryNavigation", "First");
<h1> COMPANIES</h1>
<div class="row">
